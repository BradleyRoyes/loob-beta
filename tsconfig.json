{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // Set to true for stricter type checking
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Use "react-jsx" if needed
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true,
    "target": "ESNext", // Updated from ES2017
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx"
, "components/Torusphere.jsx"  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "exclude": ["node_modules"]
}



